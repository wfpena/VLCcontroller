<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.user.remotedroid.MainActivity">
<!--
    <Button
        android:layout_width="150dp"
        android:layout_height="60dp"
        android:text="Play/Pause"
        android:background="@null"
        android:id="@+id/playPauseButton"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />
-->

    <SeekBar
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="300dp"
        android:id="@+id/volBar"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <SeekBar
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="170dp"
        android:id="@+id/seekBar"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />


    <ImageButton
        android:layout_width="45dp"
        android:layout_height="45dp"
        app:srcCompat="@drawable/volume1"
        android:id="@+id/imageButton2"
        android:layout_marginTop="250dp"
        android:layout_marginLeft="18dp"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        android:background="@null"
        android:layout_weight="1" />

    <ImageButton
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:srcCompat="@drawable/video1"
        android:id="@+id/video1"
        android:layout_marginTop="124dp"
        android:layout_marginLeft="16dp"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        android:background="@null"
        android:layout_weight="1" />


    <TextView
    android:text="Volume/125"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/textView"
    android:layout_alignBottom="@id/volBar"
    android:layout_marginBottom="20dp"
    android:textSize="17dp"
    android:layout_marginLeft="210dp" />

    <TextView
        android:text="Tempo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvTempo"
        android:layout_alignBottom="@id/seekBar"
        android:layout_marginBottom="20dp"
        android:textSize="17dp"
        android:layout_marginLeft="210dp" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center|bottom"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">


        <ImageButton
        android:layout_width="60dp"
        android:layout_height="60dp"
        app:srcCompat="@drawable/fs2"
        android:id="@+id/fsButton"
        android:background="@null"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
            android:onClick="fullS"/>

        <ImageButton
        android:layout_width="60dp"
        android:layout_height="60dp"
        app:srcCompat="@drawable/play1"
        android:id="@+id/playPauseButton"
        android:background="@null"
        android:gravity="bottom"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/imageButton"
        android:layout_toEndOf="@+id/imageButton"
        android:layout_marginLeft="60dp"
        android:layout_alignTop="@+id/imageButton" />


    </LinearLayout>


</RelativeLayout>
